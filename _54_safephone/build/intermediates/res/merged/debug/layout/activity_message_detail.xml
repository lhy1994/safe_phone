<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#e91e63"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="短信详情"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="finishMessageDetail"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_send_white_24dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:onClick="sendMessage"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#e91e63"
        android:src="@drawable/ic_contact_mail_white_48dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_type"
        android:textSize="25sp"
        android:padding="10dp"
        android:text="From"
        android:textColor="@android:color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message_addr"
            android:text="刘昊源"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:textColor="#4d73ff"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message_date_detail"
            android:text="2016/09/09"
            android:paddingRight="15dp"
            android:textSize="18sp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@android:color/black"/>
    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="hello nihao yes asdlajsdlja alsjdljasldjlasjbldf;hkowuroewjkfndfn,"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
</LinearLayout>
